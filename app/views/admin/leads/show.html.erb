<div class="container my-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="text-primary">Lead Details (ID: <%= @lead.id %>)</h1>
    <div>
      <%= link_to 'Back to Leads', admin_root_path, class: 'btn btn-outline-secondary me-2' %>
      <%= button_to "Delete Lead", admin_lead_path(@lead),
                    method: :delete,
                    data: { confirm: "Are you sure you want to delete this lead?" },
                    class: "btn btn-danger" %>
    </div>
  </div>

  <div class="card shadow-sm">
    <div class="card-body">
      <h5 class="card-title text-success"><%= @lead.name %></h5>
      <h6 class="card-subtitle mb-3 text-muted">
        <i class="bi bi-geo-alt-fill me-1"></i><%= @lead.country %>
      </h6>

      <ul class="list-group list-group-flush mb-4">
        <li class="list-group-item">
          <strong>Email:</strong> <%= mail_to @lead.email %>
        </li>
        <li class="list-group-item">
          <strong>Date Collected:</strong> <%= @lead.created_at.strftime("%Y-%m-%d at %H:%M:%S") %>
        </li>
      </ul>

      <h5>Message:</h5>
      <p class="card-text border p-3 bg-light rounded">
        <%= @lead.message %>
      </p>

    </div>
  </div>
</div>
