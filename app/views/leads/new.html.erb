<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-lg-7">
      <div class="card shadow-lg border-0">
        <div class="card-body p-5">
          <h2 class="card-title text-center mb-4">Invest in Portugal</h2>
          <p class="card-text text-center text-muted mb-5">
            Fill out the form below to receive exclusive information on investment opportunities.
          </p>

          <%# Note: We removed 'local: true' so Rails 7 Turbo can handle the instant AI update %>
          <%= form_with(model: Lead.new, url: leads_path) do |form| %>

            <%# Display validation errors %>
            <% if form.object.errors.any? %>
              <div class="alert alert-danger">
                <p>The form contains <%= pluralize(form.object.errors.count, "error") %>:</p>
                <ul>
                  <% form.object.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :name, class: "form-label" %>
              <%= form.text_field :name, class: "form-control", placeholder: "Your Full Name" %>
            </div>

            <div class="mb-3">
              <%= form.label :email, class: "form-label" %>
              <%= form.email_field :email, class: "form-control", placeholder: "Email Address" %>
            </div>

            <div class="mb-3">
              <%= form.label :country, "City or Region of Interest (Optional)", class: "form-label" %>
              <%= form.text_field :country, class: "form-control", placeholder: "e.g., Lisbon, Porto, Algarve..." %>
            </div>


            <div class="row mb-3">
              <div class="col-md-6">
                <%= form.label :budget, "Investment Budget", class: "form-label" %>
                <%= form.select :budget, Lead::BUDGET_OPTIONS, { include_blank: "Select budget (optional)" }, { class: "form-select" } %>
              </div>
              <div class="col-md-6">
                <%= form.label :timeline, "Timeline to Invest", class: "form-label" %>
                <%= form.select :timeline, Lead::TIMELINE_OPTIONS, { include_blank: "Select timeline (optional)" }, { class: "form-select" } %>
              </div>
            </div>

            <div class="mb-4">
              <%= form.label :message, "Investment Focus/Message", class: "form-label" %>
              <%= form.text_area :message, rows: 4, class: "form-control", placeholder: "Tell us about your investment focus" %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Submit for Investment Info", class: "btn btn-primary btn-lg" %>
            </div>
          <% end %>

          <%# This is where the Turbo Stream will "inject" the AI response instantly %>
          <div id="ai-report-container" class="mt-5"></div>

        </div>
      </div>
    </div>
  </div>
</div>